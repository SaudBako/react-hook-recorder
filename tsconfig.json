{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES2017", "ES7", "ES6", "DOM"],
    "module": "CommonJS",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "exclude": ["./src/stories", "./dist"]
}
